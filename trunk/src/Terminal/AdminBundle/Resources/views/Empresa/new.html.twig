{% extends 'TerminalAdminBundle::admin_layout.html.twig' %}

{% block breadcrumb %}
<ul class="breadcrumb">
    <li>
        <p>INICIO</p>
    </li>
    <li><a href="{{path('empresa')}}">Empresas</a> </li>
    <li><a href="#" class="active">Nueva Empresa</a> </li>
</ul>
{% endblock %}
{% block main_content %}
<div class="page-title"> <i class="icon-custom-left"></i>
    <h3>Nueva <span class="semi-bold">Empresa</span></h3>
</div>  
<form action="{{ path('empresa_create') }}" id="empresa_form" method="post" {{ form_enctype(form) }} >
    <div class="row">
        <div class="col-md-12">
            <div class="grid simple">
                <div class="grid-title no-border">
                    <h4>Datos <span class="semi-bold">Principales</span></h4>                
                </div>
                <div class="grid-body no-border">                
                    <div class="form-group">
                        {{ form_label(form.nombre, 'Nombre', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="input-with-icon  right">                                       
                            <i class=""></i>
                            {{ form_widget(form.nombre,{ 'attr' : { 'class' : 'form-control' }}) }}
                            {{ form_errors(form.nombre) }}
                        </div>
                    </div>                    
                    <div class="form-group">
                        {{ form_label(form.descripcion, 'Descripción', {'label_attr': {'class': 'form-label'}})}}
                        <div class="input-with-icon  right">                                       
                            <i class=""></i>
                            {{ form_widget(form.descripcion,{ 'attr' : { 'class' : 'form-control' }}) }}
                            {{ form_errors(form.descripcion) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.telefono, 'Teléfono', {'label_attr': {'class': 'form-label'}})}}
                        <div class="input-with-icon  right">                                       
                            <i class=""></i>
                            {{ form_widget(form.telefono,{ 'attr' : { 'class' : 'form-control' }}) }}
                            {{ form_errors(form.telefono) }}
                        </div>
                    </div>                                        
                    <div class="form-group">
                        {{ form_label(form.plataformas, 'Plataformas', {'label_attr': {'class': 'form-label'}})}}
                        <span class="help">ej. 10 ó 1, 2 y 3 ó 11 - 12</span>
                        <div class="input-with-icon  right">                                       
                            <i class=""></i>
                            {{ form_widget(form.plataformas,{ 'attr' : { 'class' : 'form-control' }}) }}
                            {{ form_errors(form.plataformas) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.boleterias, 'Boleterías', {'label_attr': {'class': 'form-label'}})}}
                        <span class="help">ej. 10 ó 1, 2 y 3 ó 11 - 12</span>
                        <div class="input-with-icon  right">                                       
                            <i class=""></i>
                            {{ form_widget(form.boleterias,{ 'attr' : { 'class' : 'form-control' }}) }}
                            {{ form_errors(form.boleterias) }}
                            {{ form_rest(form) }}
                        </div>                       
                    </div>                    
                    <div class="form-actions">  
                        <div class="pull-right">
                            <button type="submit" class="btn btn-primary btn-cons"><i class="icon-ok"></i> Guardar</button>
                            <button type="button" onclick="document.location = '{{ path('empresa') }}'" class="btn btn-white btn-cons">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>		                
    </div>           
</form>

{% endblock %}

    {% block footer_javascripts %}        
        {{ parent() }}

<script src="{{ asset('js/extend/js/jasny-bootstrap.js') }}"></script>
<script src="{{ asset('assets/plugins/jquery-validation/js/jquery.validate.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('js/formularios.js') }}"></script>   
    {% endblock %}